import plotly.graph_objects as go
import pandas as pd

dados=pd.read_csv('tobacco-production.csv', sep=',')

dados_array=dados.values

pais=[]
ano=[]
producao=[]
for linha in dados_array:
    if linha[2]== 2018:
        pais.append(linha[1])
        ano.append(linha[2])
        producao.append(linha[3])

fig = go.Figure(data=go.Choropleth(
    locations = pais,
    z = producao,
    text = ano,
    colorscale = 'plasma',
    autocolorscale=False,
    reversescale=True,
    marker_line_color='darkgray',
    marker_line_width=0.5,
    colorbar_tickprefix = 'Toneladas',
    colorbar_title = 'Produção em <br>toneladas',
))

fig.update_layout(
    title_text='Produção mundial de tabaco',
    geo=dict(
        showframe=False,
        showcoastlines=False,
        projection_type='equirectangular'
    ),
    annotations = [dict(
        x=0.55,
        y=0.1,
        xref='paper',
        yref='paper',
        text='Fonte: <a href="https://ourworldindata.org/grapher/tobacco-production">\
            Our world in Data</a>',
        showarrow = False
    )]
)

fig.show()


